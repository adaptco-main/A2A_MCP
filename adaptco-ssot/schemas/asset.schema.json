{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.adaptco.io/asset.schema.json",
  "title": "Asset",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "name", "kind", "uri", "tags", "meta"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "kind": {
      "type": "string",
      "minLength": 1
    },
    "uri": {
      "type": "string",
      "format": "uri"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "meta": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
