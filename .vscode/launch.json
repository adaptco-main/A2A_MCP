{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell Launch Script",
            "type": "PowerShell",
            "request": "launch",
            "script": "Enter path or command to execute, for example, ${workspaceFolder}/src/foo.ps1 or Invoke-Pester",
            "cwd": "${cwd}"
        },
        {
            "name": "PowerShell: Module Interactive Session",
            "type": "PowerShell",
            "request": "launch",
            "script": "Enter command to import your binary module, for example: \"Import-Module -Force /path/to/module.psd1|dll\""
        },
        {
            "name": "PowerShell Attach to Host Process",
            "type": "PowerShell",
            "request": "attach"
        },
        {
            "name": "Containers .NET Attach (Preview)",
            "type": "docker",
            "request": "attach",
            "platform": "netCore",
            "sourceFileMap": {
                "/src": "${workspaceFolder}"
            }
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "[PHASE_SPACE] Ghost-Void Tick (Python Geodesic)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/phase_space_tick.py",
            "console": "integratedTerminal",
            "args": [
                "Jurassic Voxel Expansion"
            ],
            "env": {
                "ENERGY_THRESHOLD": "HYPERBOLIC_GEODESIC",
                "PHASE_MODE": "TICK"
            }
        },
        {
            "name": "[ONTOLOGICAL_DOCK] Hub Socket Server (Node)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server/server.js",
            "cwd": "${workspaceFolder}/server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "PORT": "8080",
                "ENGINE_PATH": "${workspaceFolder}/bin/ghost-void_engine.exe"
            }
        },
        {
            "name": "[GEODESIC_ROUNDTRIP] Full System Debug",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server/server.js",
            "cwd": "${workspaceFolder}/server",
            "serverReadyAction": {
                "pattern": "Server started on http://localhost:([0-9]+)",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            },
            "env": {
                "AUTO_TICK": "true",
                "PHASE_DUMP": "pixel_vector"
            }
        }
    ],
    "compounds": [
        {
            "name": "[CORE_STABILIZATION] Multi-Agent Hub",
            "configurations": [
                "[PHASE_SPACE] Ghost-Void Tick (Python Geodesic)",
                "[ONTOLOGICAL_DOCK] Hub Socket Server (Node)"
            ]
        }
    ]
}