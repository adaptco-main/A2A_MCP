{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "adk://schemas/replay_packet.v0.json",
    "title": "Replay Packet V0",
    "description": "A collection of decision records forming a complete episode or session.",
    "type": "object",
    "properties": {
        "packet_id": {
            "type": "string",
            "format": "uuid"
        },
        "agent_capsule_ref": {
            "type": "string"
        },
        "episode_id": {
            "type": "string"
        },
        "records": {
            "type": "array",
            "items": {
                "$ref": "adk://schemas/decision_record.v0.json"
            }
        },
        "meta": {
            "type": "object",
            "properties": {
                "duration_seconds": {
                    "type": "number"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "required": [
        "packet_id",
        "records"
    ]
}